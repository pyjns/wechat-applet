.page {
  background: rgba(246, 242, 239, 1);
  min-height: 100vh;
  font-size: 28rpx;
}

.search-bar {
  position: sticky;
  z-index: 10;
  top: 0;
}

.order-item-wrap {
  padding: 12rpx 0;
}

.item-wrap {
  text-align: center;
  height: 100px;
  line-height: 100px;
  border: solid 1px #ccc;
}

.load-more,
.no-more {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  height: 60rpx;
  line-height: 60rpx;
}