.search {
  width: 100%;
  height: 100rpx;
  color: #666;
  font-size: 32rpx;
  background-color: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.search picker {
  display: flex;
  justify-content: center;
  width: 25%;
}
.search .picker view {
  text-align: center;
}

.search .picker text {
  position: relative;
  display: inline-block;
  overflow-x: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: right;
  padding-right: 30rpx;
  font-weight: 500;
}

.search .picker text::after {
  content: "";
  position: absolute;
  right: 0rpx;
  top: 50%;
  margin-top: -6rpx;
  width: 0rpx;
  height: 0rpx;
  border-style: solid;
  border-width: 11rpx 10rpx;
  border-color: #ccc transparent transparent transparent;
}

.search .picker text.up-arrow::after {
  transform: rotate(180deg);
  margin-top: -17rpx;
}
